link : https://codeforces.com/contest/1525/problem/B

#include<bits/stdc++.h>
#define faster ios::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);
using namespace std;
int main ()
{
    int t ;
    cin >> t ;
    while (t--)
    {
        int n ;
        cin >> n ;
        vector <int> v(n);
        for (int &x : v) cin >> x ;

        if (is_sorted(v.begin(), v.end()))
            cout << "0" << endl ;
        else if (v[0] == 1 || v[n-1]== n)
            cout << "1" << endl ;

        else if (v[0] == n  && v[n-1] == 1)
            cout << "3" << endl ;

        else
            cout << "2" << endl ;

    }
}
